#settings-edit
  .col-xs-6.settings-content
    - @user.errors.each do |attr, message|
      .alert.alert-danger= message
    = form_for @user, url: settings_path, method: :put do |f|
      %h2
        設定
      .form-body
        .form-group
          = f.label :image, "ユーザー画像:", class: "control-label"
          = f.file_field :image, class: "form-control"
        .form-group
          = f.label :name, "ユーザID:", class: "control-label"
          = f.text_field :name, class: "form-control"
        .form-group
          = f.label :screen_name, "表示名:", class: "control-label"
          = f.text_field :screen_name, class: "form-control"
        .form-group
          = f.label :bio, "プロフィール（２００文字）", class: "control-label"
          = f.text_field :bio, class: "form-control"
        = f.submit "送信する", class: "btn btn-success"
